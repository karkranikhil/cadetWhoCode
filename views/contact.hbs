<h1 class="text-center">Contact Us</h1>
<form class="col-md-6 col-md-offset-3" method="post">
    {{#each errorMessages}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name"  name="name" placeholder="Your name" value={{name}}>
    </div>
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value={{email}}>
  </div>
  <div class="form-group">
    <label for="pwd">Message:</label>
    <textarea class="form-control" row="3" name="message"  placeholder="Enter your message..." >{{message}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>